<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            </android.support.v4.view.ViewPager>
            <TextView
                android:id="@+id/commodity_name"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XXXXXX"
                android:textSize="20sp"
                android:lines="1"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/starting_price"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="起拍价：¥30.2"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/appraised_price"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="估价：¥30.2"
                android:textSize="16sp"
                android:layout_marginBottom="1dp"
                android:padding="5dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/bidding_deposit"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保证金：¥30.2"
                android:textSize="16sp"
                android:layout_marginBottom="1dp"
                android:padding="5dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/reverse_price"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保留价：¥30.2"
                android:textSize="16sp"
                android:layout_marginBottom="1dp"
                android:lines="1"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/bid_increments"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="竞价增幅：¥30.2"
                android:textSize="16sp"
                android:layout_marginBottom="1dp"
                android:lines="1"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/customer"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品归属单位或个人：XXXX拍卖行"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:lines="1"
                android:padding="5dp"
                />
            <TextView
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="出价记录"
                android:textSize="18sp"
                android:layout_marginBottom="1dp"
                android:lines="1"
                android:padding="5dp"
                />
            <ListView
                android:id="@+id/bid_record"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
            <TextView
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品描述"
                android:textSize="18sp"
                android:layout_marginBottom="1dp"
                android:lines="1"
                android:padding="5dp"
                />
            <TextView
                android:background="@android:color/white"
                android:id="@+id/commodity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="dasdasdasdasdasdadasdasda"
                >

            </TextView>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center|start"
            android:padding="5dp"
            android:text="距离开始还有3小时23分钟23秒"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_bid"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="出价"
            android:padding="2dp"
            />
    </LinearLayout>
</RelativeLayout>