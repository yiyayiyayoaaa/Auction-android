<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            </android.support.v4.view.ViewPager>
            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/commodity_name"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XXXXXX"
                android:textSize="20sp"
                android:lines="1"
                android:padding="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/starting_price"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="起拍价：¥30.2"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:textColor="@android:color/holo_red_dark"

                    />
                <TextView
                    android:id="@+id/tv_bid_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="出价123次"
                    android:textSize="16sp"
                    android:padding="10dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/appraised_price"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="估价：¥30.2"
                android:textSize="16sp"
                android:layout_marginBottom="1dp"
                android:padding="10dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/bidding_deposit"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保证金：¥30.2"
                android:textSize="16sp"
                android:layout_marginBottom="1dp"
                android:padding="10dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/reverse_price"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保留价：¥30.2"
                android:textSize="16sp"
                android:layout_marginBottom="1dp"
                android:lines="1"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/bid_increments"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="竞价增幅：¥30.2"
                android:textSize="16sp"
                android:layout_marginBottom="1dp"
                android:lines="1"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/customer"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品归属单位或个人：XXXX拍卖行"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:lines="1"
                android:padding="10dp"
                />
            <TextView
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="出价记录"
                android:textSize="18sp"
                android:layout_marginBottom="1dp"
                android:lines="1"
                android:padding="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >
                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="编号"
                    />
                <TextView
                    android:id="@+id/tv_bid_price"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="出价(元)"
                    />
                <TextView
                    android:id="@+id/tv_bid_time"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="出价时间"
                    tools:text="2016-10-12 12:12:12"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_isMe"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ListView
                android:id="@+id/bid_record"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="true"
                android:layout_height="200dp"
                android:layout_marginBottom="5dp"
                >

            </ListView>
            <TextView
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品描述"
                android:textSize="18sp"
                android:layout_marginBottom="1dp"
                android:lines="1"
                android:padding="5dp"
                />
            <TextView
                android:background="@android:color/white"
                android:id="@+id/commodity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="dasdasdasdasdasdadasdasda"
                >

            </TextView>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center|start"
            android:padding="5dp"
            android:text="距离开始还有3小时23分钟23秒"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_bid"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="出价"
            android:padding="2dp"
            />
    </LinearLayout>
</LinearLayout>