<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@android:color/holo_orange_light"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_portrait"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center|start"
            android:text="咿呀咿呀哟啊啊啊"
            android:textSize="20sp"
            tools:text="咿呀咿呀哟啊啊啊" />

        <TextView
            android:id="@+id/btn_user_info"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            tools:text="个人资料"
            android:text="个人资料"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        >
        <LinearLayout
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/btn_view_all_order"
                android:gravity="end|center"
                android:drawableEnd="@drawable/icon_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="所有订单"
                android:textSize="18sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/transparent"/>
        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/btn_wait_pay"
                android:drawableTop="@drawable/icon_wait_pay"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:text="待付款"
                />
            <TextView
                android:id="@+id/btn_wait_send"
                android:drawableTop="@drawable/icon_wait_send"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:text="待发货"/>
            <TextView
                android:id="@+id/btn_wait_received"
                android:drawableTop="@drawable/icon_wait_received"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:text="待收货"
                />
            <TextView
                android:id="@+id/btn_address_manager"
                android:drawableTop="@drawable/icon_address"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:text="地址管理"
                />
        </LinearLayout>

        <TextView
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的账户"
            android:textSize="18sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/transparent"/>
        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/btn_account"
                android:drawableTop="@drawable/icon_account"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:text="余额:¥1000.00"
                />
            <TextView
                android:id="@+id/btn_recharge"
                android:drawableTop="@drawable/icon_recharge"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:text="充值"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>