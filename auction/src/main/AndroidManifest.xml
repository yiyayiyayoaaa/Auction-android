<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cx.study.auction">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".app.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".app.home.HomeActivity"/>
        <activity android:name=".app.commodity.CommodityActivity"/>
        <activity android:name=".app.LoginActivity"/>
        <activity android:name=".app.RegisterActivity"/>
        <activity android:name=".app.home.SearchActivity"/>
        <activity android:name=".app.user.UserAddressActivity"/>
        <activity android:name=".app.user.AddressAddActivity"/>
        <activity
            android:name=".cascade.activity.MainActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"/>
        <activity android:name=".app.user.UserInfoActivity">
        </activity>
        <activity android:name=".app.order.OrderListActivity"/>
        <activity android:name=".app.order.OrderActivity"/>
        <activity android:name=".app.user.SettingActivity"/>
    </application>

</manifest>